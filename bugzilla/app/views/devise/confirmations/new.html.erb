<div class='container'>
  <div class= "row ">
    <div class='col-sm-2 heading-login'>
		<p>Bugzilla!</p>
    </div>
    <div class="col-sm-1">
				<%= image_tag "bug.gif", :class => "image-login" %>
		</div>
	</div>
  <h2 class='login-h'>Resend confirmation instructions</h2>
  <div class='col-md-4 center-login'>

<%= form_with model:resource, scope: resource_name, url: confirmation_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Resend confirmation instructions" ,:class => "btn forget_pass-btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
