<div class='container'>
  <div class= "row ">
    <div class='col-sm-2 heading-login'>
		<p>Bugzilla!</p>
    </div>
    <div class="col-sm-1">
				<%= image_tag "bug.gif", :class => "image-login" %>
		</div>
	</div>
  <div class='col-md-4 center-login'>
  <h2 class='login-h'>Forgot Password?</h2>

<%= form_with model:resource, scope: resource_name, url: password_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <br>
  <div class="field">
    <%= f.label :email , class: 'form-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' , class: 'form-control' %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions" ,class: 'btn forget_pass-btn' %>
  </div>
  <br>
  <br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
