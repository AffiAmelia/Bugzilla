<%= render 'shared/navbar'%>
<h2 class= 'page-heading'>Edit <%=@record.title %></h2>
<div class='col-md-4 project'>

  <%= form_with model: @record, url: project_path(@record), method: :patch, validate: true, local: true do |f| %>
    <%= render "errors" %>

    <p >
      <%= f.label :title , class: 'form-label' %><br>
      <%= f.text_field :title , class: 'form-control' %>
    </p>

    <p>
      <%= f.label :description ,class: 'form-label' %><br>
      <%= f.text_area :description , class: 'form-control' %>
    </p>

    <p>
      <%= f.label :'Assign Project to Users' ,class: 'form-label' %>
      <%= f.collection_select :new_user_ids, @users, :id, :name_with_email, {prompt: true},
      {multiple: true, class: 'form-control selectpicker', include_blank: false} %>
    </p>

     <p>
      <%= f.label :'Remove Users from Project' ,class: 'form-label' %>
      <%= f.collection_select :removable_user_ids, @assigned_users, :id, :name_with_email, {prompt: true},
      {multiple: true, class: 'form-control selectpicker', include_blank: false} %>
    </p>

    <p>
      <%= f.submit "Update" , class: 'btn update-btn'%>
    </p>
  <% end %>

</div>
