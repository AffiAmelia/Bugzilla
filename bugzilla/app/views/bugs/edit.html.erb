<%= render 'shared/navbar'%>
<h2 class= 'page-heading'>Edit <%=@record.title %></h2>
<div class='col-md-4 project'>

  <%= form_with model: @record, validate: true, local: true do |f| %>
    <div class="field form-group">
      <%= f.label :title , class: "form-label"%>
      <%= f.text_field :title , class: "form-control"%>
    </div>

    <div class='field form-group'>
      <%= f.label :description , class: 'form-label'%>
      <%= f.text_area :description , class: 'form-control'%>
    </div>

    <div class='field form-group'>
      <%= f.label :category %>
      <%= f.select :category, Bug::CATEGORY_MAP, class: 'form-control selectpicker'%>
    </div>

    <div class='field form-group'>
      <%= f.label :'Assign Project to Bug' , class: 'form-label'%>
      <%= f.collection_select :project_id, @projects, :id, :title, {},{ class: 'form-control selectpicker'}%>
    </div>

    <div class='field form-group'>
      <%= f.label :deadline , class: 'form-label'%>
      <%= f.datetime_select :deadline , ampm: true , class: 'form-control'%>
    </div>

    <div class='field form-group mb-2'>
        <%= f.label :screenshot , class: 'form-label'%>
        <%= f.file_field :screenshot , class: 'form-control', direct_upload: true%>
    </div>

    <p>
      <%= f.submit "Update" , class: 'btn update-btn'%>
    </p>
  <% end %>

</div>
